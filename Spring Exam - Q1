class Q1{

    public static void triangle(int x)
    {   int i =0;
        String s="*";
            for(i=0;i<x;i++)
        {
            //System.out.print(" ");
            for(int j=x;j>i;j--)
            {
                System.out.print(" ");
            }
            System.out.print(""+s);
            s=s+"*";
            System.out.println(""); 
        }
        

    }

    public  static void main (String[] args) {
    int x =7;
    triangle(x);
        
    }
        
    
}
